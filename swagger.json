                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        },
        "/blogs": {
            "post": {
                "description": "Create a new blog",
                "tags": [
                    "Blog"
                ],
