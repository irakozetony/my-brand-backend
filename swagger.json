    "paths": {
        "/auth/signup": {
            "post": {
                "description": "Create a new user account",
                "tags": [
                    "Authentication"
                ],
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "description": "user email and password",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "example@mail.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "Pass@123"
                                }
                            }
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Login with valid credentials",
                "tags": [
                    "Authentication"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "example@mail.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "Pass@123"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/messages": {
            "post": {
                "description": "Create a new message",
                "tags": [
                    "Messaging"
                ],
                "parameters": [
                    {
                        "name": "message details",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "first_name": {
                                    "type": "string",
                                    "example": "Irakoze"
                                },
                                "last_name": {
                                    "type": "string",
                                    "example": "Yves"
                                },
                                "mail": {
                                    "type": "string",
                                    "example": "irakoze@yvestony.com"
                                },
                                "phone": {
                                    "type": "string",
                                    "example": "0788622754"
                                },
                                "message": {
                                    "type": "string",
                                    "example": "Hey! I have this project I'd like to work on with you"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            },
            "get": {
                "description": "Get all messages",
                "tags": [
                    "Messaging"
                ],
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        },
        "/messages/{id}": {
            "get": {
                "description": "Get message details",
